<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:layout_width="312dp"
            android:layout_height="31dp"
            android:id="@+id/textview_latest_messagses" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp"
            app:layout_constraintStart_toEndOf="@+id/imageView_latestmessages" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/username_latestmessages"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:text="latest messages" android:textSize="18sp"/>
    <de.hdodenhof.circleimageview.CircleImageView
             app:civ_border_color="@android:color/black"
             app:civ_border_width="3dp"
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@android:drawable/ic_menu_add"
            android:id="@+id/imageView_latestmessages"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="149dp"
            android:layout_height="23dp"
            android:id="@+id/username_latestmessages"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textview_latest_messagses" android:text="username"
            android:textColor="#F70C0C0C" android:textStyle="bold" android:textSize="16sp"
            android:layout_marginEnd="160dp" app:layout_constraintEnd_toEndOf="@+id/textview_latest_messagses"
            app:layout_constraintStart_toEndOf="@+id/imageView_latestmessages" android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>