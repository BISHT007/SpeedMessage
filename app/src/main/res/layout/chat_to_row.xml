<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginTop="16dp"
android:layout_marginBottom="16dp">


    <TextView
            android:layout_height="wrap_content"
            android:id="@+id/textView_to"
            android:maxWidth="240dp"
            android:background="@drawable/round_corners" android:textSize="16dp" android:padding="16dp"
            android:text="this is my to message."
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/star_to"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_width="0dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="@android:color/black"
            app:civ_border_width="3dp"
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/star_big_on"
            android:id="@+id/star_to"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_to"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView_to"/>

</androidx.constraintlayout.widget.ConstraintLayout>