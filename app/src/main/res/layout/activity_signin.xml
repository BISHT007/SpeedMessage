<?xml version="1.0" encoding="utf-8"?>
        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="?attr/actionModeSplitBackground">

            <Button
                    android:text="@string/common_signin_button_text"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:id="@+id/signin"
                    android:backgroundTint="#F8F7F7" android:textSize="20sp" android:visibility="visible"
                    android:textStyle="bold|italic" android:textAllCaps="false"
                    android:background="@drawable/round_corners"
                    app:layout_constraintEnd_toEndOf="@+id/password_Signin" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="@+id/password_Signin" android:layout_marginTop="28dp"
                    app:layout_constraintTop_toBottomOf="@+id/password_Signin"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <ImageView
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="@+id/username_login"
            app:layout_constraintEnd_toEndOf="@+id/username_login" android:layout_marginEnd="8dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.653" app:srcCompat="@drawable/speedicon"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_signin" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="email"
            android:background="@drawable/round_corners"
            app:layout_constraintHorizontal_bias="0.0"
            android:paddingLeft="20px" android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <Button
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/signin" android:background="@drawable/round_corners"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/signin"
            app:layout_constraintEnd_toEndOf="@+id/signin"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_Signin"
            app:layout_constraintEnd_toEndOf="@+id/username_signin"
            app:layout_constraintStart_toStartOf="@+id/username_signin" android:background="@drawable/round_corners"
            app:layout_constraintHorizontal_bias="0.0" android:hint="password" android:paddingLeft="10px"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/username_signin"
    />
</androidx.constraintlayout.widget.ConstraintLayout>